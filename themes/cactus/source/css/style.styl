@import "_variables"
@import "_colors/" + $colors
@import "_util"
@import "_mixins"
@import "_extend"
@import "_fonts"

global-reset()

*, *:before, *:after
  box-sizing: border-box

html
  height: 100%
  border-top: 2px solid $color-text
  -webkit-text-size-adjust: 100%
  -ms-text-size-adjust: 100%

body
  display: flex
  flex-direction: column
  background-color: $color-background
  color: $color-text
  font-weight: 400
  font-size: $font-size
  font-family: $font-family-body
  line-height: $line-height
  text-rendering: geometricPrecision

  antialias()

.content
  flex: 1

  @extend $base-style

  p
    hyphens(auto)

  code
    hyphens(manual)

  a
    color: $color-text
    text-decoration: none

    underline(5px, $color-text)

    &:hover
      background-image: linear-gradient(transparent, transparent 4px, $color-link 4px, $color-link)

  a.icon
    background: none

    &:hover
      color: $color-link

  h1 a, .h1 a, h2 a, h3 a, h4 a, h5 a, h6 a
    background: none
    color: inherit
    text-decoration: none

  h1 a:hover, .h1 a:hover, h2 a:hover, h3 a:hover, h4 a:hover, h5 a:hover, h6 a:hover
    underline(6px, $color-link)

  h6 a
    background: none
    color: inherit
    text-decoration: none

  h6 a:hover
    underline(6px, $color-link)

  h3
    font-size: 1.0rem !important;

@media (min-width: 540px)
  .image-wrap
    flex-direction: row
    margin-bottom: 2rem

    .image-block
      flex: 1 0 35%
      margin-right: 2rem

    p
      flex: 1 0 65%

.max-width
  max-width: $page-width

@media (max-width: 480px)
  // smaller margins at smaller screen widths
  .px3
    padding-right: 1rem
    padding-left: 1rem

  .my4
    margin-top: 2rem
    margin-bottom: 2rem

@media (min-width: 480px)
  p
    text-align: justify

@import "_partial/header"
@import "_partial/post/actions_desktop"
@import "_partial/post/actions_mobile"
@import "_partial/index"
@import "_partial/article"
@import "_partial/archive"
@import "_partial/comments"
@import "_partial/footer"
@import "_partial/pagination"
@import "_partial/search"
// Code
@import "_highlight/" + $highlight

pre
  overflow-x: auto
  padding: 10px 15px
  padding-bottom: 0
  border: 1px dotted $color-border
  border-radius: 4px
  font-size: 13px
  font-family: $font-family-mono
  line-height: 22px
  -webkit-border-radius: 4px

  code
    display: block
    padding: 0
    border: none

code
  padding: 0 5px
  border: 1px dotted $color-border
  border-radius: 2px
  -webkit-border-radius: 2px

.highlight
  overflow-x: auto
  margin: 1rem 0
  padding: 10px 15px
  border-radius: 4px
  background: $color-background-code
  font-family: $font-family-mono
  // color: $color-accent-3
  -webkit-border-radius: 4px

  figcaption
    margin: -5px 0 5px
    color: $color-meta-code
    font-size: .9em
    zoom: 1

    a
      float: right
      color: $color-meta-code
      font-style: italic
      font-size: .8em

      underline(10px, $color-link)

    a:hover
      color: lighten($color-meta-code, 20%)

    &:before, content: ""
      display: table

    &:after
      clear: both

  pre
    padding: 0
    border: none
    background: none

  table
    width: auto

  td.gutter
    text-align: right

  .line
    height: 22px

.checked
  color: orange !important

.content
  position: relative
.amazon-picture-container
  position: absolute
  right: 0
  top: -80px
  width: 90px
.amazon-picture-container img:hover
  cursor: pointer !important
  transform: none !important
.amazon-picture-container img 
  box-shadow: 1px 1px 10px 1px rgba(0,0,0,0.4)
  border-radius: 2px
  
@media (max-width: 500px)
  .amazon-picture-container
    display: none

.tooltip 
  font-size: 1rem
  color: #00b7c8
.tooltip:hover
  cursor: pointer
.tooltip-icon
  position: relative
  top: -0.4rem
  left: 0.2rem
.tooltip-text
  box-shadow: 1px 1px 1px 1px rgba(0,0,0,0.2)
  padding: 15px
  position: absolute
  left: 0
  margin-top: 20px
  background-color: #00b7c8
  z-index: 100
  color: white !important;
.close-it
  z-index: 101
  color: white
  position:absolute
  top: 2px
  right: 2px
.close-it:hover 
  color: black  
.display-none
  display: none 


.overlay-pic
  position: absolute;
  left: 0;
  top: 0;
  background-color: rgba(0,0,0,0.8);
  z-index: 100;
  width: 100%;
  border-radius: 5px;
  height: 100%;
  color: white;
  text-align: center;
  font-size: 30px;
  padding-top: 20px;

.overlay-pic:hover
  background-color: rgba(0,0,0,0.6)
  cursor: pointer

.click-pic 
  position: relative
  display: block

